  <script>
    const properties = [
      {
        name: 'Beachside Villa',
        desc: 'A luxurious villa facing the beach.',
        image: 'https://manage.isleblue.co/uploads/villas/images/3005/turks-and-caicos-villa-positano-2015-014.jpg',
      },
      {
        name: 'Mountain Retreat',
        desc: 'A cozy place near the mountains with garden view.',
        image: 'https://images.rezfusion.com/evrn/RIRIRE/222793/9251810296.jpg?optimize=true&rotate=true&quality=70',
      },
      {
        name: 'City Apartment',
        desc: 'A modern apartment in the heart of the city.',
        image: 'https://photos2.theblueground.com/736/pg32976-o-f5a7dea0-c7af-8e71-d5dd-9b483d2c0af5.jpg?quality=low',
      },
    ];
    function searchProperties() {
      const container = document.getElementById("propertyList");
      container.innerHTML = "";
      properties.forEach(prop => {
        const card = document.createElement('div');
        card.className = 'card';
        card.innerHTML = `
          <img src="${prop.image}" alt="Property">
          <div class="card-content">
            <h3>${prop.name}</h3>
            <p>${prop.desc}</p>
          </div>
        `;
        container.appendChild(card);
      });
    }
    function openForm(id) {
      document.querySelectorAll('.form-popup').forEach(p => p.style.display = 'none');
      document.getElementById(id).style.display = 'block';
    }
    searchProperties();
</script>
  </script>
