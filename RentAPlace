<script>
  function isValidEmail(email) {
    const pattern = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
    return pattern.test(email);
  }
  function handleLogin() {
    const email = document.getElementById("loginEmail").value.trim();
    const pass = document.getElementById("loginPass").value.trim();
    if (!email || !pass) {
      alert("⚠ Please fill in all login fields!");
    } else if (!isValidEmail(email)) {
      alert("🚫 Invalid email format!");
    } else if (pass.length < 6) {
      alert("🔒 Password must be at least 6 characters!");
    } else {
      alert("✅ Logged in successfully!");
      closeForms();
    }
  }
  function handleRegister() {
    const name = document.getElementById("regName").value.trim();
    const email = document.getElementById("regEmail").value.trim();
    const pass = document.getElementById("regPass").value.trim();
    if (!name || !email || !pass) {
      alert("⚠ All registration fields must be filled!");
    } else if (!isValidEmail(email)) {
      alert("🚫 Enter a valid email!");
    } else if (pass.length < 6) {
      alert("🔒 Password too short (min 6 characters)!");
    } else {
      alert("🎉 Registered successfully!");
      closeForms();
    }
  }
  function handleSubmitProperty() {
    const propName = document.getElementById("propName").value.trim();
    const propLoc = document.getElementById("propLoc").value.trim();
    const propFeat = document.getElementById("propFeat").value.trim();

    if (!propName || !propLoc || !propFeat) {
      alert("⚠ Fill in all property details!");
    } else {
      alert("🏡 Property submitted successfully!");
      closeForms();
    }
  }
  function closeForms() {
    document.querySelectorAll('.form-popup').forEach(p => p.style.display = 'none');
  }
  window.addEventListener('click', function(e) {
    document.querySelectorAll('.form-popup').forEach(popup => {
      if (!popup.contains(e.target) && !e.target.matches('a')) {
        popup.style.display = 'none';
      }
    });
  });
</script>
<script>
  function scrollToSearch() {
    document.getElementById("searchSection").scrollIntoView({
      behavior: "smooth"
    });
  }
</script>
